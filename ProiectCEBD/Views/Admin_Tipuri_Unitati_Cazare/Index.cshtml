@model IEnumerable<ProiectCEBD.Models.TIPURI_UNITATI_DE_CAZARE>

@{
    ViewBag.Title = "TipuriUnitatiCazare";
}

<style>
    .container {
        max-width: 100vw !important;
    }

    .body-content {
        margin-top: 0px;
        display: flex;
        height: 100vh;
        column-gap: 20px;
        padding-left: 0px !important;
        padding-right: 0px !important;
    }

    #sidebar {
        width: 20vw;
    }

    .complexuri-cazare-content {
        padding-top: 20px;
        width: 80vw;
    }

    footer {
        display: none;
    }
</style>

@Html.Partial("_Sidebar")
<div class="complexuri-cazare-content">
    <p>
        @Html.ActionLink("Create New", "CreareTipUnitate", "Admin_Tipuri_Unitati_Cazare")
    </p>

    <hr />

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DENUMIRE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DESCRIERE)
            </th>
            <th>
                ACTION
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DENUMIRE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DESCRIERE)
                </td>
                <td>
                    @{
                        var numeTipUnitateUrlFriendly = item.DENUMIRE.Replace(" ", "-").ToLower();
                    }
                    @Html.ActionLink("Edit", "EditareTipUnitate", "Admin_Tipuri_Unitati_Cazare",
                    new { tip_unitate = numeTipUnitateUrlFriendly, id = item.IDTIPURIUNITATICAZARE }, null)
                    @Html.ActionLink("Delete", "StergereTipUnitate", "Admin_Tipuri_Unitati_Cazare",
                    new { id = item.IDTIPURIUNITATICAZARE }, null)
                </td>
            </tr>
        }
    </table>
</div>